<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.klapproject">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:label="Dips"
            android:icon="@drawable/dibs_logo"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".AddAlarmPopUp"
                android:theme="@style/add_alarm">
        </activity>
        <activity
                android:name=".DocumentDetailActivity"
                android:theme="@style/Theme.Design.Light.NoActionBar">
        </activity>
        <activity
                android:name=".RecordListActivity"
                android:theme="@style/Theme.Design.Light.NoActionBar">
        </activity>

        <activity
                android:name=".AlarmListActivity"
                android:theme="@style/Theme.Design.Light.NoActionBar">
        </activity>
        <activity
                android:name=".CategoryActivity"
                android:theme="@style/Theme.Design.Light.NoActionBar"
                android:windowSoftInputMode="adjustNothing">
        </activity>
        <activity
                android:name=".WritingForm"
                android:theme="@style/Theme.Design.Light.NoActionBar"
                android:windowSoftInputMode="adjustNothing">
        </activity>
        <activity
                android:name=".SignUpActivity"
                android:theme="@style/Theme.Design.Light.NoActionBar"
                android:windowSoftInputMode="adjustNothing">
        </activity>
        <activity
                android:name=".LoginActivity"
                android:theme="@style/Theme.Design.Light.NoActionBar">
        </activity>
        <activity
                android:name=".ChatActivity"
                android:theme="@style/Theme.Design.Light.NoActionBar">
        </activity>
        <activity
                android:name=".MainLoadActivity"
                android:theme="@style/Theme.Design.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".MainActivity"
                android:theme="@style/Theme.Design.Light.NoActionBar">
        </activity>
    </application>

</manifest>