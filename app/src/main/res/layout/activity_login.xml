<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">
    <TextView
            android:text="ID"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/textView" android:layout_marginTop="256dp"
            app:layout_constraintEnd_toStartOf="@+id/editText_id" android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="94dp"
            android:layout_marginStart="94dp"/>
    <EditText
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="아이디를 입력하세요."
            android:ems="10"
            android:id="@+id/editText_id"
            android:layout_marginTop="256dp" app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toTopOf="@+id/editText_pw" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="87dp" android:layout_marginRight="87dp"/>
    <TextView
            android:text="PW"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toStartOf="@+id/editText_pw"
            android:layout_marginBottom="362dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="94dp" android:layout_marginStart="94dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="비밀번호를 입력하세요."
            android:ems="10"
            android:id="@+id/editText_pw"
            app:layout_constraintTop_toBottomOf="@+id/editText_id" app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/signin_button" android:layout_marginEnd="87dp"
            android:layout_marginRight="87dp"/>
    <Button
            android:text="로그인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signin_button"
            app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintTop_toBottomOf="@+id/editText_pw"
            app:layout_constraintEnd_toStartOf="@+id/signup_button" android:layout_marginBottom="296dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="13dp" android:layout_marginRight="13dp"/>
    <Button
            android:text="회원가입"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup_button"
            app:layout_constraintBaseline_toBaselineOf="@+id/signin_button"
            app:layout_constraintStart_toEndOf="@+id/signin_button" app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>