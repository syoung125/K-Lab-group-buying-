<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
            android:padding="10dp"
            android:id="@+id/yourLayout"
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:padding = "7dp"
                android:layout_marginRight="7dp"
                android:layout_width="63dp"
                android:layout_height="63dp" android:id="@+id/yourImg"
                android:src="@drawable/user_profile"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                    android:textColor="#333333"
                    android:text="seoyoung"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/yourId"
                    android:textSize="20dp"/>
            <TextView
                    android:text="물건 판매 됬나요?"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp"
                    android:gravity="center_vertical"
                    android:background="#E7E7E7"
                    android:paddingRight="15dp"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/yourContent" android:textSize="25dp"/>
        </LinearLayout>
        <TextView
                android:layout_margin="5dp"
                android:text="오전 9:30"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/yourTime" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:padding="10dp"
            android:id="@+id/myLayout"
            android:gravity="right"
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:gravity="bottom"
                android:text="오전 10:30"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/myTime"/>
        <TextView
                android:text="거래중입니다"
                android:textSize="25dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:background = "#CECCEEFF"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/myContent"/>
    </LinearLayout>
</LinearLayout>
