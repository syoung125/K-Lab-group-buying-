<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/yourLayout"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_gravity="top"
                android:layout_width="70dp"
                android:layout_height="70dp" android:id="@+id/yourImg"
                android:layout_weight="1" app:srcCompat="@drawable/chat_user"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:layout_weight="1">
            <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="seoyoung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/yourId" android:textSize="20dp"/>
            <TextView
                    android:layout_margin="5dp"
                    android:gravity="top"
                    android:text="물건 판매 됬나요?"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/yourContent" android:textSize="25dp"/>
        </LinearLayout>
        <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:text="오전 9:30"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/yourTime" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/myLayout"
            android:layout_gravity="right"
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="bottom"
                android:text="오전 10:30"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/myTime"/>
        <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:text="거래중입니다"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/myContent"/>
    </LinearLayout>
</FrameLayout>
