<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragment1"
        android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent" android:layout_height="70dp"
                      android:orientation="horizontal" android:padding="15dp">
            <EditText
                    android:hint="지금 필요한 물건을 검색하세요."
                    android:layout_width="0dp" android:layout_height="match_parent"
                      android:layout_weight="5"
                      android:padding="3dp"
                      android:id="@+id/category_write"/>
            <ImageButton android:layout_width="0dp" android:layout_height="match_parent"
                         android:layout_weight="1" android:background="#00ffffff"
                         android:id="@+id/category_search" android:src="@android:drawable/ic_search_category_default"/>
    </LinearLayout>
    <GridLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:padding="22dp" android:layout_gravity="center"
                android:rowCount="2" android:columnCount="4">
        <ImageButton android:layout_margin="5dp" android:layout_width="80dp" android:layout_height="80dp"/>
        <ImageButton android:layout_margin="5dp" android:layout_width="80dp" android:layout_height="80dp"/>
        <ImageButton android:layout_margin="5dp" android:layout_width="80dp" android:layout_height="80dp"/>
        <ImageButton android:layout_margin="5dp" android:layout_width="80dp" android:layout_height="80dp"/>
        <ImageButton android:layout_margin="5dp" android:layout_width="80dp" android:layout_height="80dp"/>
        <ImageButton android:layout_margin="5dp" android:layout_width="80dp" android:layout_height="80dp"/>
        <ImageButton android:layout_margin="5dp" android:layout_width="80dp" android:layout_height="80dp"/>
        <ImageButton android:layout_margin="5dp" android:layout_width="80dp" android:layout_height="80dp"/>

    </GridLayout>
    <Button android:text="숨기기"
            android:layout_width="match_parent" android:layout_height="40dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_margin="15dp"
                android:id="@+id/category_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>