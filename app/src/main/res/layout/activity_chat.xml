<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChatActivity">

    <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/itemImg"
                android:layout_weight="1"/>
        <LinearLayout
                android:layout_weight="4"
                android:layout_width="0dp" android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:text="seoyoung"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/userId" android:textSize="30sp"/>
        </LinearLayout>
    </LinearLayout>
    <ListView
            android:transcriptMode="alwaysScroll"
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:id="@+id/listView" android:dividerHeight="0px"
            android:divider="#ffffff"/>
    <LinearLayout
            android:layout_weight="0.8"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@drawable/menu_btn"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:id="@+id/menuBtn" android:layout_weight="12"/>
        <EditText
                android:layout_width="357dp"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText" android:layout_weight="12"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@drawable/send_btn" android:id="@+id/sendBtn"
                android:layout_weight="12"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/bottomLinear"
            android:visibility="gone"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <ImageView
                android:clickable="true"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/chat_btn1" android:id="@+id/btnImg1"
                android:layout_weight="1"/>
        <ImageView
                android:clickable="true"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/chat_btn2" android:id="@+id/btnImg2"
                android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>