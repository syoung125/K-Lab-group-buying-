<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SignUpActivity"
        android:paddingLeft="20dp" android:paddingRight="20dp" android:paddingTop="80dp" android:paddingBottom="80dp">
    <TextView
            android:text="신규 가입하기"
            android:layout_marginBottom="50dp"
            android:textSize="20sp"
            android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"
    android:orientation="horizontal">
        <TextView android:text="학교선택" android:textSize="15sp"
                  android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
        <Spinner android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2">

        </Spinner>
    </LinearLayout>
    <TextView
            android:text="아이디(학교 e-mail)" android:textSize="15sp"
            android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"
                  android:orientation="horizontal">
        <EditText
                  android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"/>
        <Button
                android:text="인증" android:textSize="15sp"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
        </Button>
    </LinearLayout>
    <TextView
            android:text="비밀번호" android:textSize="15sp"
            android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <EditText
            android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <TextView
            android:text="닉네임" android:textSize="15sp"
            android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"
                  android:orientation="horizontal">
        <EditText
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"/>
        <Button
                android:text="중복확인" android:textSize="15sp"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
        </Button>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"
                  android:orientation="horizontal">
        <TextView
                android:text="위치 인증" android:textSize="15sp"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"/>
        <Button
                android:text="인증하기" android:textSize="15sp"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
        </Button>
    </LinearLayout>
    <Button
            android:text="회원가입" android:textSize="15sp" android:id="@+id/loginbutton"
            android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
    </Button>
</LinearLayout>